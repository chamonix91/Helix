{% extends 'HelixBackofficeBundle:Back:layout.html.twig' %}

{% form_theme form with '@HelixBackoffice/Back/bootstrap_3_layout.html.twig' %}

{% block content %}
    <section class="panel">
    <header class="panel-heading">
        Ajouter Un Sponsor
    </header>

    <div class="panel-body">
    <div class="form-group">
        <br><br><br>
{{ form_start(form) }}
Email:
{{ form_widget(form.email) }}
        Username:
{{ form_widget(form.username) }}
        Mot de passe:
{{ form_widget(form.plainPassword.first) }}
