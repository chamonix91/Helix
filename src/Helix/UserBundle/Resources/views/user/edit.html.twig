{% extends '@HelixFront/Template/Layout.html.twig' %}

{% block title %}Profil | Helix{% endblock title %}

{% block pagetitle %} Modifier Profil  {% endblock %}
{% block pageracine %} Accueil {% endblock %}
{% block pageactuelle %} Modifier Profil{% endblock %}

{% block container %}

    <div class="container">
    <div class="col-md-10 translateY-60 col-sm-12 col-md-offset-1">
    <!-- General Information -->
    <div class="add-listing-box edit-info mrg-bot-25 padd-bot-30 padd-top-25">
    <div class="listing-box-header">
        <div class="avater-box">
            {{ form_start(edit_form) }}
    {% if app.user.nomLogo == NULL %}
        <img src="{{ asset('assets/img/avatar-homme.png') }}" class="img-responsive img-circle edit-avater" alt=""/>
        {% else %}
            <img src="{{asset ('assets/img/upload/'~ user.nomLogo)}}" class="img-responsive img-circle edit-avater" alt=""/>
            {% endif %}
            <div class="upload-btn-wrapper">
                <button class="btn theme-btn">Changer logo </button>
                {{ form_widget(edit_form.logo) }}
            </div>
        </div>
        <h3>{{ user.nom }}  {{ user.prenom }}</h3>

    </div>



        <div class="col-sm-6">
            <label>Email</label>
            {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="col-sm-6">
            <label>Nom d'utilisateur</label>
            {{ form_widget(edit_form.username, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="col-sm-6">
            <label>Nom </label>
            {{ form_widget(edit_form.nom, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="col-sm-6">
            <label>Prenom</label>
            {{ form_widget(edit_form.prenom, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="col-sm-6">
            <label>Ajouter des documents l√©gaux</label>
            {{ form_widget(edit_form.Document, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="row mrg-r-10 mrg-l-10">
        </div>





    </div>
        <div class="text-center"><button type="submit" class="btn theme-btn">Modifier</button></div>

        {{ form_end(edit_form) }}

    </div>

    </div>


{% endblock container %}