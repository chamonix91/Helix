{% extends '@HelixFront/Template/Layout.html.twig' %}


{% block title %}Profil | Helix{% endblock title %}

{% block pagetitle %} Modifier Profil  {% endblock %}
{% block pageracine %} Accueil {% endblock %}
{% block pageactuelle %} Modifier Profil{% endblock %}

{% block container %}
    <section class="padd-0">
        <div class="container">
            <div class="col-md-10 translateY-60 col-sm-12 col-md-offset-1">
                <!-- General Information -->
                <div class="add-listing-box edit-info mrg-bot-25 padd-bot-30 padd-top-25">
                    <div class="listing-box-header">
                        <div class="avater-box">
                            <img src="{{ asset('assets/img/avatar.jpg') }}"
                                 class="img-responsive img-circle edit-avater" alt=""/>
                            <div class="upload-btn-wrapper">
                                <button class="btn theme-btn">Change Avatar</button>
                                <input type="file" name="myfile"/>
                            </div>
                        </div>
                        <h3>Daniel M. Dev</h3>
                        <p>Account Manager</p>
                    </div>
                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

                    <div class="row mrg-r-10 mrg-l-10">
                        <div class="col-sm-6">
                            <label>Nom d'utilisateur</label>
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-sm-6">
                            <label>Email</label>
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-sm-6">
                            <label>Mot de passe actuel</label>
                            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
                        </div>




                    </div>


                </div>
                <div class="text-center">
                    <button type="submit" class="btn add-field theme-btn">Mettre Ã  jour</button>
                </div>
                {{ form_end(form) }}

                <!-- End General Information -->


                <!-- Change Password Information -->

                <!-- End Change Password Information -->

            </div>
        </div>
    </section>





{% endblock container %}