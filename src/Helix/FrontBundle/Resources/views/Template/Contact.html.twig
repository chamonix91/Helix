{% extends '@HelixFront/Template/Layout.html.twig' %}

{% block title %}Contact | Helix{% endblock title %}

{% block pagetitle %} Contact {% endblock %}
{% block pageracine %} Accueil {% endblock %}
{% block pageactuelle %} Contact {% endblock %}

{% block container %}

    <!-- ================ Office Address ======================= -->
    <section class="padd-0">
        <div class="container">
            <div class="col-md-10 col-md-offset-1 col-sm-12 translateY-60">
                <div class="col-md-3 col-sm-3">

                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="detail-wrapper text-center padd-top-40 mrg-bot-10 padd-bot-40 light-bg">
                        <i class="theme-cl font-30 ti-location-pin"></i>
                        <h4>Coordonnées Helix</h4>
                        Adresse xx rue xxx,  xxxxx <br>
                        Téléphone: (+216 xx xxx xxx)
                    </div>
                </div>
                <div class="col-md-3 col-sm-3">

                </div>
            </div>
        </div>
    </section>
    <!-- ================ End Office Address ======================= -->

    <!-- ================ Fill Forms ======================= -->
    <section class="padd-top-0">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Merci!</strong> Votre message a été envoyé avec succés.

                </div>
            {% endfor %}
            <div class="col-md-6 col-sm-6">
                {{ form_start(form) }}
                <div class="form-group">
                    <label>Sujet:</label>
                    {{ form_widget(form.subject, { 'attr': {'class': "form-control", 'placeholder': 'Sujet'} }) }}
                    {{ form_errors(form.subject, { 'attr': {'class': "form-control", 'placeholder': 'Sujet'} }) }}
                </div>
                <div class="form-group">
                    <label>Nom:</label>
                    {{ form_widget(form.name, { 'attr': {'class': "form-control", 'placeholder': 'Nom'} }) }}
                    {{ form_errors(form.name, { 'attr': {'class': "form-control", 'placeholder': 'Nom'} }) }}
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    {{ form_widget(form.email, { 'attr': {'class': "form-control", 'placeholder': 'Email'} }) }}
                    {{ form_errors(form.email, { 'attr': {'class': "form-control", 'placeholder': 'Email'} }) }}
                </div>
                <div class="form-group">
                    <label>Message:</label>
                    {{ form_widget(form.message, { 'attr': {'class': "form-control", 'placeholder': 'Message'} }) }}
                    {{ form_errors(form.message, { 'attr': {'class': "form-control", 'placeholder': 'Message'} }) }}
                </div>
                <div class="form-group">
                    <button class="btn theme-btn" name="submit">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-md-6 col-sm-6">
                <div id="map_full_width_one" class="full-width" style="height:400px;"></div>
            </div>
        </div>
    </section>
    <!-- ================ End Fill Forms ======================= -->





{% endblock %}